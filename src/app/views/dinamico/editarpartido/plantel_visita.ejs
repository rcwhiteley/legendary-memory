<div id="visita" class="collapse col-md-12 mt-4">
    <div class="row text-center">
        <div class="col-sm-4">
            <label class="bottom-label" for="titulares-visita">Titulares:</label>
            <select ng-init="titulares_elegidos_visita=[]"
                    ng-options="jugador.jugadores_matricula + ' - ' + jugador.nombre for jugador in plantel_visita | filter:esTitularVisita"
                    ng-model="titulares_elegidos_visita" multiple class="form-control" id="titulares-visita">
            </select>
            <button ng-click="mover_titular_a_plantel_visita()" class="btn btn-basic">></button>
        </div>
        <div class="col-sm-4">

            <label for="plantel-visita">Plantel:</label>
            <select ng-init="plantel_elegidos_visita=[]"
                    ng-options="jugador.jugadores_matricula + ' - ' + jugador.nombre for jugador in plantel_visita | filter:noConvocadoVisita"
                    ng-model="plantel_elegidos_visita" multiple class="form-control" id="plantel-visita">
            </select>
            <button ng-click="mover_a_titulares_visita()" class="btn btn-default" ><</button>
            <button ng-click="mover_a_suplentes_visita()" class="btn btn-default">></button>
        </div>
        <div class="col-sm-4">

            <label for="reserva-visita">Reserva:</label>
            <select ng-init="suplentes_elegidos_visita=[]"
                    ng-options="jugador.jugadores_matricula + ' - ' + jugador.nombre for jugador in plantel_visita | filter:esSuplenteVisita"
                    ng-model="suplentes_elegidos_visita"  multiple class="form-control" id="reserva-visita">

            </select>
            <button ng-click="mover_suplente_a_plantel_visita()" class="btn btn-default"><</button>
        </div>
    </div>
    <div class="form-group">
        <button ng-click="guardar_visita()" class="btn btn-primary">Guardar</button>
    </div>
</div>