    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>Nombre</th>
                        <th>Facultad</th>
                    </tr>
                    <% for(var i = 0; i < equipos.length; i++) { %>
                    <tr>
                        <td><%= equipos[i].equipos_nombre %></td>
                        <td><%= equipos[i].facultad %></td>
                    </tr>
                    <% } %>
                </table>
            </div>

            <div class="col-md-6 mt-4 card">
                <form action="/agregarEquipo" method="post" class="card-body">
                    <h3 class="card-title">Agregar Equipo</h3>
                    <div class="form-group">
                        <input id="equipo" type="text" name="title" class="form-control"
                        placeholder="Equipo">
                    </div>
                    <div class="form-group">
                        <input type="text" name="equipos" class="form-control"
                        placeholder="Facultad">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('equipo').focus();
